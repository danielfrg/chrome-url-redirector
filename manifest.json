{
  "manifest_version": 3,
  "name": "URL Redirector",
  "version": "1.0",
  "description": "Redirects URLs based on patterns",
  "icons": {
    "16": "static/favicon-16x16.png",
    "32": "static/favicon-32x32.png",
    "128": "static/redirect@2x.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "static/favicon-16x16.png",
      "32": "static/favicon-32x32.png",
      "128": "static/redirect@2x.png"
    }
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  }
}
